<!DOCTYPE html>
<html>
<head>
  <title>Simple Screen Share</title>
  <style>
    body { font-family: Arial; text-align: center; padding: 20px; }
    button, input { padding: 10px 20px; margin: 10px; font-size: 16px; }
    video {
      width: 80%;
      margin-top: 20px;
      border: 2px solid #444;
      border-radius: 10px;
      max-height: 400px;
    }
    #shareLinkContainer { display: none; }
  </style>
</head>
<body>

  <h1>Screen Sharing App</h1>

  <video id="screenVideo" autoplay playsinline controls muted></video>

  <!-- Sharer UI -->
  <div id="sharerUI">
    <button id="startShareBtn">Start Screen Share</button>
    <div id="shareLinkContainer">
      <p>Share this link:</p>
      <input type="text" id="shareLink" readonly />
    </div>
  </div>

  <!-- Viewer UI -->
  <div id="viewerUI" style="display: none;">
    <p>Viewing shared screen...</p>
  </div>

  <script src="/socket.io/socket.io.js"></script>
  <script src="/script.js"></script>
</body>
</html>
